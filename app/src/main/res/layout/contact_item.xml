<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="300dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/contact_item_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/contact_item_profile_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#9b8cfc"
                    android:gravity="center"
                    android:text="AM"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contact_item_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/pnsb"
                android:paddingStart="20dp"
                android:text="Contact Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/cardView3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/userPhoneImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/userphone"
                app:layout_constraintBottom_toBottomOf="@+id/contact_item_phone_number"
                app:layout_constraintEnd_toStartOf="@+id/contact_item_phone_number"
                app:layout_constraintTop_toTopOf="@+id/contact_item_phone_number" />

            <TextView
                android:id="@+id/contact_item_phone_number"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/pnr"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/contact_item_name"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/contact_item_name"
                app:layout_constraintTop_toBottomOf="@+id/contact_item_name" />


            <ImageView
                android:id="@+id/userEmailImage"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:src="@drawable/useremail"
                app:layout_constraintBottom_toBottomOf="@+id/contact_item_email"
                app:layout_constraintEnd_toStartOf="@+id/contact_item_email"
                app:layout_constraintTop_toTopOf="@+id/contact_item_email" />

            <TextView
                android:id="@+id/contact_item_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pnr"
                android:paddingStart="10dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/contact_item_phone_number"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="@+id/contact_item_phone_number"
                app:layout_constraintTop_toBottomOf="@+id/contact_item_phone_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

